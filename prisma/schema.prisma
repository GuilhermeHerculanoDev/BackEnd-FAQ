generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int         @id @default(autoincrement())
  name      String      @unique @db.VarChar(50)
  email     String      @unique @db.VarChar(100)
  description String   @default("Esse usuário não tem nenhuma descrição") @db.VarChar(200)
  telephone   String   @default("Sem telefone") @db.VarChar(13)
  password  String      @db.VarChar(100)
  is_admin  Boolean     @default(false)
  answers   Answers[]
  questions Questions[]
}

model Category {
  id        Int         @id @default(autoincrement())
  category_name      String      @unique @db.VarChar(50)
  category_description      String      @db.VarChar(100)
  questions Questions[]
}

model Questions {
  id          Int       @id @default(autoincrement())
  users_id    Int?
  category_id Int?
  title       String    @db.VarChar(50)
  description String    @db.VarChar(200)
  date        DateTime? @db.Date
  answers Answers[]
  category    Category? @relation(fields: [category_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  user        Users?    @relation(fields: [users_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model Answers {
  id          Int       @id @default(autoincrement())
  users_id    Int?
  question_id Int?
  answer      String    @db.VarChar(200)
  date        DateTime? @db.Date
  question    Questions? @relation(fields: [question_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  user        Users?    @relation(fields: [users_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}